@page "/PrivateChat/{CompanionId:int}/{CurrentUserId:int}"

@inherits PrivateChatBase

<PageTitle>PrivateChat</PageTitle>

<div class="container">

    <div class="row" style="display: none;">
        <div class="col-3">Connection Id</div>
        <div class="col-6"><span id="connectionId">@ConnectionId</span></div>
    </div>

    <div class="row">&nbsp;</div>

    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" value="@CurrentUserName" disabled /></div>
    </div>

    <div class="row">&nbsp;</div>

    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" @bind="@newMessage"/></div> 
    </div>

    <div class="row">&nbsp;</div>

    <div class="row" style="display: none;">
        <div class="col-2">Group</div>
        <div class="col-4"><input type="text" id="groupName" value="@CurrentPrivateChat.PrivateChatHashName" /></div>
    </div>

    <div class="row">&nbsp;</div>

    <div class="row">
        <div class="col-6">
            <button class="btn btn-primary" @onclick="SendMessage">Send Message</button>&nbsp;&nbsp;
        </div>
    </div>

</div>

<hr />

<div class="row">
    <div class="col-6">
        <ul id="messagesList">
            @foreach (var message in CurrentPrivateChat.Messages!)
            {
                <li>@message.Owner says @message.Content</li>
            }
        </ul>
    </div>
</div>  